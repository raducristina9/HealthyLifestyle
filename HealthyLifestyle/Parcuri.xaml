<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthyLifestyle.Parcuri"
             Title="Parcuri">
    <ScrollView>
        <StackLayout
            Spacing="25"
            Padding="30,0"
            >

            <Label
                Text="Parcuri"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="24"
                HorizontalOptions="Center" />

            <ListView IsRefreshing="True"
                x:Name="listViewParcuri" 
                HorizontalOptions="Center">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <HorizontalStackLayout Padding="8">
                                <Label Text="{Binding denumire, StringFormat=' Name = {0} '}" VerticalOptions="Center"/>
                                <Label Text="{Binding hectare, StringFormat=' Hectare = {0} '}" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>

    </ScrollView>
</ContentPage>